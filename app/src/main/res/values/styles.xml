<resources>

    <attr name="button_radius" format="dimension" />
    <attr name="border" format="dimension" />
    <attr name="input_bg" format="reference" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="button_radius">30dp</item>
        <item name="border">1dp</item>
        <item name="input_bg">@color/colorInputBg</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/header_bg</item>
        <!-- Support library compatibility -->
        <item name="background">@drawable/header_bg</item>
    </style>

    <style name="MyToolBar">
        <item name="android:background">@drawable/header_bg</item>
        <!-- Support library compatibility -->
        <item name="background">@drawable/header_bg</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/playball_regular</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="Container">
        <item name="android:padding">15dp</item>
    </style>

    <style name="ActivityHeader">
        <item name="android:textSize">36dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TitleFont">
        <item name="android:fontFamily">@font/playball_regular</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MyTextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="Label">
        <item name="android:textSize">12dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginLeft">17dp</item>
    </style>

    <style name="Edittext" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <style name="Button">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonPrimary" parent="Button">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="InfoLabel" parent="Base.TextAppearance.AppCompat.Display1">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="InfoValue" parent="Base.TextAppearance.AppCompat.Display2">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="CollapsingTextAppearance" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title"/>
    <style name="CollapsingTextAppearance.Inverse" >
        <item name="android:textSize">30sp</item>
    </style>

    <style name="ToolBarWithNavigationBack">
        <item name="navigationIcon">@drawable/ic_arrow_back_black_24dp</item>
    </style>

    <style name="TextAppearance" parent="TextAppearance.AppCompat"/>
    <style name="TextAppearance.Header">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="TextComponent"/>

    <style name="TextComponent.ItemRow">
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="TextComponent.ItemRow.Selectable">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

</resources>
