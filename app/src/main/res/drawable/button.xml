        <shape>
            <!--<solid android:color="@color/colorPrimary"/>-->
            <gradient
                android:angle="0"
                android:startColor="#e25956"
                android:endColor="#efb688"
                android:type="linear"
                />

            <!--<stroke-->
                <!--android:width="2.3dp"-->
                <!--android:color="@color/colorPrimary" />-->

            <corners
