<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActivityHeader">
        <item name="android:textSize">18dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="Input" parent="Base.Widget.AppCompat.EditText">

    </style>

    <style name="InfoLabel" parent="Base.TextAppearance.AppCompat.Display1">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="InfoValue" parent="Base.TextAppearance.AppCompat.Display2">
        <item name="android:textSize">15dp</item>
    </style>

</resources>
